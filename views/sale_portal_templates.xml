    <template id="sale_proposal_portal_content" name="Sales Proposal Portal Content">
        <!-- Intro -->
        <div id="introduction" class="pb-2 pt-3 card-header bg-white">
            <h2 class="my-0 ">
                Proposal <em t-out="sale_proposal.name" />
            </h2>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations">
                <div class="row" id="so_date">
                    <div class="mb-3 col-6">
                        <t t-if="sale_proposal.state in ['send', 'confirm', 'draft']">
                            <strong>Proposal Date:</strong>
                        </t>
                        <span t-field="sale_proposal.date_order" t-options='{"widget": "date"}' />
                    </div>
                    <div class="mb-3 col-6" t-if="sale_proposal.validity_date">
                        <strong>Expiration Date:</strong>
                        <span t-field="sale_proposal.validity_date" t-options='{"widget": "date"}' />
                    </div>
                </div>
                <div class="row" id="custome_address">
                    <div class="col-lg-6">
                        <strong class="d-block mb-1">
                            <p>
                                Customer Address:
                            </p>
                        </strong>
                        <address t-field="sale_proposal.partner_address" />
                    </div>
                </div>
                <section id="details" style="page-break-inside: auto;" class="mt32">
                    <h3 id="details">Pricing</h3>

                    <!-- <t t-set="display_discount" t-value="True in [line.discount > 0 for line in sale_proposal.order_line]" /> -->

                    <table t-att-data-order-id="sale_proposal.id" t-att-data-token="sale_proposal.access_token" class="table table-sm" id="sales_proposal_table">
                        <thead class="bg-100">
                            <tr>
                                <th class="text-start" id="product_name_header">Products</th>
                                <th class="text-end">Quantity</th>
                                <th t-attf-class="text-end {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                                Unit Price
                                </th>
                                <!-- <th t-if="display_discount" t-attf-class="text-end {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th> -->
                                <!-- <th t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Taxes</span>
                                </th> -->
                                <th class="text-end">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0" />
                            <t t-set="lines_to_report" t-value="sale_proposal._get_proposal_lines_to_report()" />

                            <t t-foreach="lines_to_report" t-as="line">

                                <tr class="bg-200 fw-bold">
                                    <!-- <t t-if="not line.display_type"> -->
                                    <td id="product_name">
                                        <span t-field="line.name" />
                                    </td>
                                    <td class="text-end">
                                        <div id="quote_qty">
                                            <button class="fa fa-arrow-circle-up border-0"></button>
                                            <span t-field="line.product_uom_qty" />
                                            <button class="fa fa-arrow-circle-down border-0"></button>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <div id="quote_qty">
                                            <button class="fa fa-arrow-circle-up border-0"></button>
                                            <span t-field="line.price_unit" />
                                            <button class="fa fa-arrow-circle-down border-0"></button>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <div id="quote_qty">
                                            <span t-field="line.price_subtotal" />
                                        </div>
                                    </td>
                                </tr>
                                <tr t-if="current_section and (line_last or lines_to_report[line_index+1].display_type == 'line_section') and not line.is_downpayment" class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-out="current_subtotal" t-options='{"widget": "monetary", "display_currency": sale_proposal.pricelist_id.currency_id}'></span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- 
                    <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                            <t t-call="sales_proposal.sale_proposal_portal_content_totals_table" />
                        </div>
                    </div> -->
                </section>

                <section t-if="sale_proposal.signature" id="signature" name="Signature">
                    <div class="row mt-4" name="signature">
                        <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-md-4'} ms-auto text-center">
                            <h5>Signature</h5>
                            <img t-att-src="image_data_uri(sale_proposal.signature)" style="max-height: 6rem; max-width: 100%;" />
                            <p t-field="sale_proposal.signed_by" />
                        </div>
                    </div>
                </section>

                <section t-if="sale_proposal.payment_term_id" class="mt-5">
                    <h3 class="">Payment terms</h3>
                    <hr class="mt-0 mb-1" />
                    <span t-field="sale_proposal.payment_term_id" />
                </section>
            </div>
        </div>
    </template>

    <template id="sale_proposal_portal_content_totals_table">
        <table class="table table-sm">
            <t t-set="tax_totals" t-value="0.0" />
            <t t-call="account.document_tax_totals" />
        </table>
    </template>
</odoo>
